<UserControl x:Class="ReviewYourFilms.Components.RowOfFilm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReviewYourFilms.Components"
             mc:Ignorable="d" 
             d:DesignWidth="1200" d:DesignHeight="430"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lbRowName" Grid.Row="0"
               Content="Row Of Films" Foreground="#A1B4C4" FontWeight="Bold"
               Padding="12 1.5 0 0" FontSize="30"/>
        <ScrollViewer Grid.Row="1" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="stackFilm" Orientation="Horizontal" Margin="0 5 5 5"/>
        </ScrollViewer>
    </Grid>
    

</UserControl>
